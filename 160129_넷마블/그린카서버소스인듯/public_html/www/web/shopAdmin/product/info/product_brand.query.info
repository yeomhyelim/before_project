CREATE TABLE `PRODUCT_BRAND` (
  `PR_NO` BIGINT NOT NULL AUTO_INCREMENT COMMENT '번호',
  `PR_NAME` VARCHAR(50) COMMENT '브랜드명',
  `PR_LIST_IMG` VARCHAR(100) COMMENT '브랜드 목록이미지',
  `PR_TITLE_IMG` VARCHAR(100) COMMENT '브랜드 타이틀이미지',
  `PR_VIEW_IMG` VARCHAR(100) COMMENT '브랜드 상세이미지',
  `PR_ADD_IMG` VARCHAR(100) COMMENT '브랜드 추가이미지',
  `PR_COMMENT` VARCHAR(500) COMMENT '간략설명',
  `PR_HTML` TEXT COMMENT '설명(HTML)',
  `PR_TMP1` VARCHAR(50) COMMENT '임시컬럼1',
  `PR_TMP2` VARCHAR(50) COMMENT '임시컬럼2',
  `PR_TMP3` VARCHAR(200) COMMENT '임시컬럼3',
  `PR_REG_DT` DATETIME COMMENT '작성자',
  `PR_REG_NO` BIGINT COMMENT '작성일',
  `PR_MOD_DT` DATETIME COMMENT '수정자',
  `PR_MOD_NO` BIGINT COMMENT '수정일',
  PRIMARY KEY(PR_NO)
) ENGINE=MyISAM
COMMENT='상품브랜드관리';

