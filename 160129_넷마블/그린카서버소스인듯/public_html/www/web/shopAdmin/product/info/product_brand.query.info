	,IN IN_PR_NAME VARCHAR(50)
	,IN IN_PR_LIST_IMG VARCHAR(100)
	,IN IN_PR_TITLE_IMG VARCHAR(100)
	,IN IN_PR_VIEW_IMG VARCHAR(100)
	,IN IN_PR_ADD_IMG VARCHAR(100)
	,IN IN_PR_COMMENT VARCHAR(500)
	,IN IN_PR_HTML BLOB
	,IN IN_PR_TMP1 VARCHAR(50)
	,IN IN_PR_TMP2 VARCHAR(50)
	,IN IN_PR_TMP3 VARCHAR(200)
	,IN IN_PR_M_NO INT
	,IN IN_PR_ALIGN INT
	,IN IN_PR_REG_DT DATETIME
	,IN IN_PR_REG_NO INT
	,IN IN_PR_MOD_DT DATETIME
	,IN IN_PR_MOD_NO INT
)
BEGIN
	UPDATE PRODUCT_BRAND SET 
		 PR_NAME = IN_PR_NAME
		,PR_LIST_IMG = IN_PR_LIST_IMG
		,PR_TITLE_IMG = IN_PR_TITLE_IMG
		,PR_VIEW_IMG = IN_PR_VIEW_IMG
		,PR_ADD_IMG = IN_PR_ADD_IMG
		,PR_COMMENT = IN_PR_COMMENT
		,PR_HTML = IN_PR_HTML
		,PR_TMP1 = IN_PR_TMP1
		,PR_TMP2 = IN_PR_TMP2
		,PR_TMP3 = IN_PR_TMP3
		,PR_M_NO = IN_PR_M_NO
		,PR_ALIGN = IN_PR_ALIGN
